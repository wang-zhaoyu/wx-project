<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="za_clsbss_serivce" logger="slf4j"/>
	<dubbo:registry address="${dubbo.cheguo.cls.address}" protocol="zookeeper"/>
	<dubbo:protocol name="dubbo" port="${dubbo.cheguo.cls.port}" />

	<import resource="classpath*:dubbo-provider/*.xml" />
	
    <!-- 提供方应用信息，用于计算依赖关系 -->  
    <dubbo:application name="wx_service_provider"  />  
	
    <!-- 使用zookeeper注册中心暴露服务地址 -->  
　　	<!--实际项目中使用properties文件的形式定义zookeeper的地址 -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" protocol="zookeeper"/>   
    
    <!-- 用dubbo协议在20880端口暴露服务 -->  
    <dubbo:protocol name="dubbo" port="20880" />
    <dubbo:service interface="com.wx.service.UserService" ref="userService" version="1.0" timeout="5000"/>
</beans>
